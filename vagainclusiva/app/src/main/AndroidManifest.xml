<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" package="ifsp.spo.edu.vagainclusiva">

    <!-- Adicionando Permissão de Localização, Mapbox -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:ignore="CoarseFineLocation" />

    <!-- Permissão Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vagainclusiva"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

            <activity
                android:name=".TelaLogo"
                android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
            <activity
                android:name=".TelaLogin"
                android:exported="true" />
            <activity
                android:name=".TelaCadastro"
                android:exported="true" />
            <activity
                android:name=".TelaGeolocalizacao"
                android:exported="true">
            </activity>
            <activity
                android:name=".TelaConexaoInternet"
                android:exported="true">
            </activity>

        <activity
            android:name=".Map"
            android:exported="true">
        </activity>

    </application>

</manifest>