<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInterface.telaComentarioAvaliacao.TelaComentarioAvaliacao">

    <TextView
        android:id="@+id/title_comentarios_vaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Comentários da vaga"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Comentários da vaga" />

    <View
        android:id="@+id/container_comentario_vaga_avaliacao"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:background="@color/white2"
        app:layout_constraintBottom_toTopOf="@+id/backgroundUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_comentarios_vaga" />

    <TextView
        android:id="@+id/container_comentario_1"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_vaga_avaliacao"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_vaga_avaliacao"
        app:layout_constraintTop_toTopOf="@+id/container_comentario_vaga_avaliacao" />

    <TextView
        android:id="@+id/avaliacao_nome_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Joana"
        android:fontFamily="@font/jura"
        android:textFontWeight="700"
        android:textColor="@color/primary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_1"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_1"
        app:layout_constraintTop_toTopOf="@+id/container_comentario_1" />

    <TextView
        android:id="@+id/avaliacao_descricao_1"
        android:layout_width="345dp"
        android:layout_height="35dp"
        android:fontFamily="@font/jura"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat "
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_1"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_nome_1"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat " />

    <TextView
        android:id="@+id/avaliacao_button_comentario1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Avaliação tem 2 comentários"
        android:textColor="@color/primary"
        android:textFontWeight="800"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_1"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_1"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_descricao_1"
        tools:text="Avaliação tem 2 comentários" />

    <TextView
        android:id="@+id/avaliacao_button_responder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Responder"
        android:textColor="@color/primary"
        android:textFontWeight="800"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_1"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toEndOf="@+id/avaliacao_button_comentario1"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_descricao_1"
        tools:text="Responder" />

    <TextView
        android:id="@+id/container_comentario_"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_vaga_avaliacao"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_vaga_avaliacao"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_button_responder" />

    <TextView
        android:id="@+id/avaliacao_descricao_"
        android:layout_width="345dp"
        android:layout_height="35dp"
        android:fontFamily="@font/jura"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat "
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_nome_"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat " />

    <TextView
        android:id="@+id/avaliacao_button_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Avaliação tem 2 comentários"
        android:textColor="@color/primary"
        android:textFontWeight="800"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_descricao_"
        tools:text="Avaliação tem 2 comentários" />

    <TextView
        android:id="@+id/avaliacao_button_responder4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Responder"
        android:textColor="@color/primary"
        android:textFontWeight="800"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/avaliacao_button_comentario"
        app:layout_constraintTop_toBottomOf="@+id/avaliacao_descricao_"
        tools:text="Responder" />

    <TextView
        android:id="@+id/avaliacao_nome_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Joana"
        android:textColor="@color/primary"
        android:textFontWeight="700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/container_comentario_"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="@+id/container_comentario_"
        app:layout_constraintTop_toTopOf="@+id/container_comentario_" />

    <LinearLayout
        android:id="@+id/backgroundUser"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/design_default_color_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemInicioBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_inicio_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:gravity="center"
                android:text="Início" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemPersonBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_person_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:gravity="center"
                android:text="Perfil" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemInfoBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_info_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:gravity="center"
                android:text="Info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemFiltroBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_filter_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:gravity="center"
                android:text="Filtros" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>