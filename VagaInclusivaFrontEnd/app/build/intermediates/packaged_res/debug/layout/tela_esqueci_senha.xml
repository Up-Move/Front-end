<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/background_blob_scene_haikei"
    tools:context=".userInterface.telaEsqueciSenha.TelaEsqueciSenha">

    <TextView
        android:id="@+id/title_altere_sua_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginHorizontal="26dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:textFontWeight="700"
        android:textSize="28dp"
        android:text="Alterar dados do seu perfil"
        android:textColor="@color/primary"
        tools:text="Altere sua senha" />

    <EditText
        android:id="@+id/esqueci_senha_nova"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="66dp"
        android:layout_marginTop="38dp"
        android:drawableStart="@drawable/icon_alterar_dados_senha"
        android:drawableEnd="@drawable/icon_eye_close"
        android:inputType="textPassword"
        android:backgroundTint="@color/primary"
        android:ems="10"
        android:fontFamily="@font/jura"
        android:hint="Nova senha"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:paddingLeft="8dp"
        android:textAppearance="@style/input"
        android:textColor="@color/primary"
        android:textColorHint="@color/primary"
        android:textFontWeight="700"
        android:textSize="18dp"
        tools:ignore="TextFields,UnusedAttribute" />

    <EditText
        android:id="@+id/esqueci_senha_nova_confirma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="66dp"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/icon_alterar_dados_senha"
        android:drawableRight="@drawable/icon_eye_close"
        android:inputType="textPassword"
        android:backgroundTint="@color/primary"
        android:ems="10"
        android:fontFamily="@font/jura"
        android:hint="Confirmar senha"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:paddingLeft="8dp"
        android:textAppearance="@style/input"
        android:textColor="@color/primary"
        android:textColorHint="@color/primary"
        android:textFontWeight="700"
        android:textSize="18dp"
        tools:ignore="TextFields,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_atualizar_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jura"
        android:background="@drawable/button_border_radius"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="atualizar senha"
        android:textFontWeight="900"
        tools:text="Atualizar senha" />

</LinearLayout>