        app:srcCompat="@drawable/icon_star" />

    <ImageView
        android:id="@+id/filtro_estrela_avaliacao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/filtro_container_avaliacao_nota"
