        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toEndOf="@+id/filtro_container_avaliacao_nota"
        app:layout_constraintStart_toStartOf="@+id/filtro_container_avaliacao_nota"
        app:layout_constraintTop_toBottomOf="@+id/filtro_title_nota"
        app:srcCompat="@drawable/icon_star" />

    <ImageView
        android:id="@+id/filtro_estrela_avaliacao5"
        android:layout_width="wrap_content"
