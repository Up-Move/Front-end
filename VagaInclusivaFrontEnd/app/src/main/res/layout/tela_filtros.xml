        android:layout_height="44dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtro_avaliacao_title" />

    <TextView
        android:id="@+id/filtro_title_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Nota"
        android:textColor="@color/primary"
        android:textFontWeight="900"
        app:layout_constraintEnd_toEndOf="@+id/filtro_container_avaliacao_nota"
        app:layout_constraintStart_toStartOf="@+id/filtro_container_avaliacao_nota"
