        android:fontFamily="@font/jura"
        android:text="Tráfego local com menor Intensidade"
        android:textColor="@color/black"
        android:textFontWeight="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtro_recuo_para_cadeira_traseira" />

    <ImageView
        android:id="@+id/filtro_checkbox_acessibilidade6"
