    tools:context=".userInterface.telaFiltros.TelaFiltros">

    <TextView
        android:id="@+id/filtro_salvar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="Filtro salvo"
        android:textColor="@color/primary"
        android:textFontWeight="700"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Filtro salvo" />

    <TextView
        android:id="@+id/tela_perfil_altere_dados"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/borda_top_bottom"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:text="Ainda não há filtros salvos..."
        android:textColor="@color/black"
        android:textFontWeight="900"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtro_salvar_title"
        tools:ignore="TextSizeCheck"
        tools:text="Ainda não há filtros salvos..." />

    <TextView
