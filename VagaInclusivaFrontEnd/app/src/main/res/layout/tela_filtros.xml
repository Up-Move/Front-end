        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filtro_calcadas_niveladas" />

    <ImageView
        android:id="@+id/filtro_checkbox_acessibilidade3"
