<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".userInterface.telaComentarioIndividual.TelaComentarioIndividual">

    <TextView
        android:id="@+id/tela_comentario_individual_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:text="@string/tela_comentario_individual_titulo"
        android:textColor="@color/primary"
        android:textFontWeight="700"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tela_comentario_individual_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/background2"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_individual_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tela_comentario_individual_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:textColor="@color/primary"
                android:textFontWeight="700"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/tela_comentario_individual_estrela"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:orientation="horizontal"
                android:paddingRight="32dp"
                android:gravity="right"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/tela_comentario_individual_estrela_1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/icon_star_filled"/>

                <ImageView
                    android:id="@+id/tela_comentario_individual_estrela_2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/icon_star_filled"/>

                <ImageView
                    android:id="@+id/tela_comentario_individual_estrela_3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/icon_star_filled"/>

                <ImageView
                    android:id="@+id/tela_comentario_individual_estrela_4"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/icon_star_filled"/>

                <ImageView
                    android:id="@+id/tela_comentario_individual_estrela_5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:srcCompat="@drawable/icon_star_filled"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tela_comentario_individual_descricao"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:fontFamily="@font/jura"
            android:textColor="@color/primary_text"
            android:textFontWeight="400"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tela_comentario_individual_responder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jura"
            android:text="@string/tela_comentario_individual_responder"
            android:textColor="@color/primary"
            android:textFontWeight="800"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tela_comentario_individual_sem_avaliacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:text="@string/tela_comentario_individual_sem_avaliacao"
        android:textColor="@color/primary"
        android:textFontWeight="900"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_individual_container" />

    <ScrollView
        android:id="@+id/tela_comentario_individual_viewScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/background2"
        android:scrollbarSize="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_individual_container"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/tela_comentario_individual_viewScroll_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/include"
        layout="@layout/tela_footer" />

</androidx.constraintlayout.widget.ConstraintLayout>