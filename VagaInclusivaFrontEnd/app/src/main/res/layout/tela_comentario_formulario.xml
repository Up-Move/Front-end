<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInterface.telaComentarioFormulario.TelaComentarioFormulario">

    <TextView
        android:id="@+id/tela_comentario_formulario_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:text="Comente na avaliação de Joana"
        android:textColor="@color/primary"
        android:textFontWeight="700"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Comente na avaliação de Joana" />

    <TextView
        android:id="@+id/tela_comentario_formulario_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/white2"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_formulario_title" />

    <TextView
        android:id="@+id/tela_comentario_formulario_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/jura"
        android:text="Joana"
        android:textColor="@color/primary"
        android:textFontWeight="700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tela_comentario_formulario_container"
        app:layout_constraintStart_toStartOf="@+id/tela_comentario_formulario_container"
        app:layout_constraintTop_toTopOf="@+id/tela_comentario_formulario_container"/>

    <TextView
        android:id="@+id/tela_comentario_formulario_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/jura"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat "
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/tela_comentario_formulario_container"
        app:layout_constraintStart_toStartOf="@+id/tela_comentario_formulario_container"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_formulario_nome"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse blandit consequat erat, non tincidunt massa fringilla sed. Proin porta tincidunt felis, eu consequat " />

    <EditText
        android:id="@+id/tela_comentario_formulario_texto"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white2"
        android:gravity="top"
        android:hint="Escreva seu comentário na avaliação ..."
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_formulario_container"
        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck" />

    <TextView
        android:id="@+id/title_comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="Comentário"
        android:textColor="@color/primary"
        android:textFontWeight="500"
        app:layout_constraintEnd_toEndOf="@+id/tela_comentario_formulario_texto"
        app:layout_constraintStart_toStartOf="@+id/tela_comentario_formulario_texto"
        app:layout_constraintTop_toTopOf="@+id/tela_comentario_formulario_texto"
        tools:text="Comentário" />

    <Button
        android:id="@+id/button_enviar_comentario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/jura"
        android:text="enviar comentário"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_comentario_formulario_texto"
        tools:text="enviar comentário" />

    <include
        layout="@layout/tela_footer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>