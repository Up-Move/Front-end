<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blob_scene_haikei"
    tools:context=".userInterface.telaPerfil.TelaPerfil">

    <View
        android:id="@+id/tela_perfil_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tela_perfil_altere_perfil_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:textFontWeight="700"
        android:textSize="24dp"
        android:text="@string/tela_perfil_altere_seu_perfil"
        style="@style/TEXT_COLOR_PRIMARY"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toTopOf="@+id/tela_perfil_view"
        tools:ignore="SpUsage,UnusedAttribute" />

    <View
        android:id="@+id/tela_perfil_container_dados"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/background2"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_altere_perfil_title" />

    <TextView
        android:id="@+id/tela_perfil_username_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:gravity="left"
        android:textFontWeight="700"
        android:textColor="@color/primary"
        android:layout_marginTop="6dp"
        android:textSize="18dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_nome_de_usuario"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toTopOf="@+id/tela_perfil_container_dados"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UnusedAttribute" />

    <EditText
        android:id="@+id/tela_perfil_username"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:ems="10"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/jura"
        android:background="@color/background3"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_username_title"
        tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck,UnusedAttribute" />

    <TextView
        android:id="@+id/tela_perfil_email_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:gravity="left"
        android:textFontWeight="700"
        android:textColor="@color/primary"
        android:layout_marginTop="6dp"
        android:textSize="18dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_email"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_username"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UnusedAttribute" />

    <EditText
        android:id="@+id/tela_perfil_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/jura"
        android:background="@color/background3"
        android:textSize="14sp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_email_title"
        tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck,UnusedAttribute" />

    <TextView
        android:id="@+id/tela_perfil_create_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:gravity="left"
        android:textFontWeight="700"
        android:textColor="@color/primary"
        android:layout_marginTop="6dp"
        android:textSize="18dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_criacao_da_conta"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_email"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UnusedAttribute" />

    <EditText
        android:id="@+id/tela_perfil_create"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/jura"
        android:background="@color/background3"
        android:textSize="12sp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_container_dados"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_container_dados"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_create_title"
        tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck,UnusedAttribute" />

    <TextView
        android:id="@+id/tela_perfil_altere_dados"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jura"
        android:background="@drawable/borda_top_bottom"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:textFontWeight="900"
        android:textSize="18dp"
        android:text="@string/tela_perfil_altere_dados_do_perfil"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_container_dados"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UnusedAttribute" />

    <ImageView
        android:id="@+id/tela_perfil_seta_direita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="320dp"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toTopOf="@+id/tela_perfil_altere_dados"
        app:srcCompat="@drawable/arrowrightcirclefill"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/tela_perfil_tema_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_tema"
        android:textColor="@color/primary_text"
        android:textFontWeight="900"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tela_perfil_idioma_title"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_altere_dados"
        tools:ignore="SpUsage,UnusedAttribute" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/tela_perfil_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="176dp"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_tema_title"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tela_perfil_idioma_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="120dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_idioma"
        android:textColor="@color/primary_text"
        android:textFontWeight="900"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_altere_dados"
        tools:ignore="RtlHardcoded,SpUsage,UnusedAttribute" />

    <ImageView
        android:id="@+id/tela_perfil_brasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        android:layout_marginTop="8dp"
        android:layout_marginRight="-75dp"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_idioma_title"
        app:srcCompat="@drawable/br_1"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/tela_perfil_grabretanha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="-90dp"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toEndOf="@+id/tela_perfil_brasil"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_idioma_title"
        app:srcCompat="@drawable/gb_1"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/checkbox_excluir_conta"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:onClick="onCheckBoxClicked"
        app:layout_constraintEnd_toStartOf="@+id/tela_perfil_excluir_conta_title"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_brasil"
        app:srcCompat="@drawable/check2square"
        tools:ignore="ContentDescription,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tela_perfil_excluir_conta_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:layout_marginTop="16dp"
        android:text="@string/tela_perfil_excluir_conta"
        android:textColor="@color/primary"
        android:textFontWeight="900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_brasil"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tela_perfil_button_logout"
        android:textColor="@color/primary_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_border_radius"
        android:clickable="true"
        android:fontFamily="@font/jura"
        android:text="@string/tela_perfil_fazer_logout"
        android:textFontWeight="900"
        app:layout_constraintEnd_toEndOf="@+id/tela_perfil_view"
        app:layout_constraintStart_toStartOf="@+id/tela_perfil_view"
        app:layout_constraintTop_toBottomOf="@+id/tela_perfil_excluir_conta_title"
        tools:ignore="TouchTargetSizeCheck,UnusedAttribute" />

    <include
        layout="@layout/tela_footer"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
