<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_large_background"
    tools:context=".userInterface.telaPermissaoTelefone.TelaPermissaoTelefone">

    <View
        android:id="@+id/telefone_container"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_border_radius_contexts"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">
    </View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_permitir_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_radius_secondary"
        android:clickable="true"
        android:fontFamily="@font/jura"
        android:text="@string/tela_telefone_permitir"
        android:textColor="#ffffff"
        android:textFontWeight="900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefone_container"
        />

    <ImageView
        android:id="@+id/sem_telefone_vetor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/telefone_container"
        app:layout_constraintStart_toStartOf="@+id/telefone_container"
        app:layout_constraintTop_toTopOf="@+id/telefone_container"
        app:srcCompat="@drawable/geoaltfill"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/sem_telefone_mensagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jura"
        android:text="@string/tela_telefone_mensagem"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="600"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/telefone_container"
        app:layout_constraintStart_toStartOf="@+id/telefone_container"
        app:layout_constraintTop_toBottomOf="@+id/sem_telefone_vetor"
        tools:ignore="SpUsage,UnusedAttribute,TextSizeCheck,VisualLintLongText" />

</androidx.constraintlayout.widget.ConstraintLayout>