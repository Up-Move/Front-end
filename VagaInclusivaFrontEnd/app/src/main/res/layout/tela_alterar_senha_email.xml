<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/background_blob_scene_haikei"
    tools:context=".userInterface.telaAlterarSenhaEmail.TelaAlterarSenhaEmail">

    <TextView
        android:id="@+id/title_altera_senha_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginHorizontal="56dp"
        android:fontFamily="@font/jura"
        android:gravity="center"
        android:textFontWeight="700"
        android:textSize="28dp"
        android:text="@string/tela_alterar_senha_email_alteracao_de_senha"
        android:textColor="@color/primary"
        tools:ignore="SpUsage,UnusedAttribute" />

    <EditText
        android:id="@+id/alterar_senha_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="66dp"
        android:layout_marginTop="38dp"
        android:drawableLeft="@drawable/icon_email_alterar_senha"
        android:backgroundTint="@color/primary"
        android:ems="10"
        android:fontFamily="@font/jura"
        android:hint="@string/tela_alterar_senha_email_hint_email"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:paddingLeft="8dp"
        android:textColor="@color/primary"
        android:textColorHint="@color/primary"
        android:textFontWeight="700"
        android:textSize="18dp"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,TextFields,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jura"
        android:background="@drawable/button_border_radius"
        android:textColor="@color/primary_text2"
        android:clickable="true"
        android:text="@string/tela_alterar_senha_email_enviar_email"
        android:textFontWeight="900"
        tools:ignore="UnusedAttribute" />

    <androidx.cardview.widget.CardView
        android:id="@+id/email_accordion"
        android:onClick="expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:contentPadding="10dp"
        tools:ignore="TouchTargetSizeCheck">

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_alterar_senha_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:drawableRight="@drawable/icon_arrowdowncirclefill"
                android:text="@string/tela_alterar_senha_email_titulo"
                android:textColor="@color/primary_text"
                android:textFontWeight="700"
                tools:ignore="RtlHardcoded,UnusedAttribute,UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/email_alterar_senha_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura"
                android:text="@string/tela_alterar_senha_email_mensagem"
                android:textColor="@color/primary_text"
                android:textFontWeight="300"
                android:textSize="12dp"
                android:visibility="gone"
                tools:ignore="SpUsage,UnusedAttribute" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
