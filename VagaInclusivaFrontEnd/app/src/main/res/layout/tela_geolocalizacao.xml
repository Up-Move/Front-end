<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_large_background"
    tools:context=".userInterface.telaGeolocalizacao.TelaGeolocalizacao">

    <View
        android:id="@+id/geolocalizacao_container"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_border_radius_contexts"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">
    </View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_permitir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_radius_secondary"
        android:clickable="true"
        android:fontFamily="@font/jura"
        android:text="Permitir"
        android:textColor="@color/white"
        android:textFontWeight="900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geolocalizacao_container"
        tools:text="Permitir" />

    <ImageView
        android:id="@+id/sem_internet_vetor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/geolocalizacao_container"
        app:layout_constraintStart_toStartOf="@+id/geolocalizacao_container"
        app:layout_constraintTop_toTopOf="@+id/geolocalizacao_container"
        app:srcCompat="@drawable/geoaltfill" />

    <TextView
        android:id="@+id/sem_internet_mensagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jura"
        android:text="Olá, visitante! Para acessar o aplicativo VagaInclusiva, é necessário que você esteja conectado à internet e permita a função de geolocalização no seu dispositivo Android."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/geolocalizacao_container"
        app:layout_constraintStart_toStartOf="@+id/geolocalizacao_container"
        app:layout_constraintTop_toBottomOf="@+id/sem_internet_vetor"
        tools:text="Olá, visitante! Para acessar o aplicativo VagaInclusiva, é necessário que você esteja conectado à internet e permita a função de geolocalização no seu dispositivo Android." />


</androidx.constraintlayout.widget.ConstraintLayout>